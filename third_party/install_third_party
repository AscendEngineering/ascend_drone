#go into archives and extract all

for FILE in $(ls archive)
do
    tar -xzf archive/$FILE
done

#do what we can with apt-get
sudo apt-get install -y autoconf automake libtool curl make g++ unzip
sudo apt-get install -y scons
sudo apt-get install -y libtool-bin=2.4.6-9
sudo apt-get install -y xmlto

#raspberry pi specific
sudo apt-get install -y libraspberrypi-dev raspberrypi-kernel-headers
sudo apt-get purge -y wolfram-engine
sudo apt-get purge -y libreoffice*
sudo apt-get clean
sudo apt-get autoremove

#zeromq
cd zeromq-4.3.2
./autogen.sh
./configure
make
make install 
cd ..
  
#cppzmq
cd cppzmq-4.5.0
mkdir -p build
cd build
cmake ..
sudo make -j4 install
cd ../../

#protobuf
cd protobuf-3.11.2
./configure
make
sudo make install
sudo ldconfig 
cd ..

#raspicam
cd raspicam
mkdir build
cd build
cmake ..
make
sudo make install
sudo ldconfig
cd ../..

#onboard sdk
sudo usermod -a -G dialout $USER
cd Onboard-SDK-3.6.1
mkdir build
cd build
cmake ..
make all
sudo make install
cd ../..



