import subprocess

env = Environment() 

#path variables
doms_directory = 'third_party/ascend_doms/'
messaging_directory = doms_directory+'messaging/'
messaging_lib = messaging_directory+'libs/'
messaging_def = messaging_directory+'definitions/'

#create proto files
subprocess.check_call(["mkdir","-p", messaging_directory+"libs"])
subprocess.check_call("protoc -I=" + messaging_def + " --cpp_out=" + messaging_lib + " " + messaging_def+'msgDef.proto', shell=True)

#messaging
messaging_files = Glob(messaging_lib + '*.cc')
messaging_files.extend(['drone_msg.cpp'])

#DJI OSDK
osdk = 'third_party/Onboard-SDK'
osdk_lib= osdk + '/build/libs'
osdk_helpers_path= osdk + '/linux_osdk_helpers'
osdk_helpers=[osdk_helpers_path+'/dji_linux_environment.cpp',osdk_helpers_path+'/dji_linux_helpers.cpp']

#drone files
drone_files = ['drone.cpp','video_transmission.cpp','dji_wrapper.cpp',messaging_files,osdk_helpers]

#opencv
opencv = ['opencv_core','opencv_highgui','opencv_imgcodecs']

#DOMS fields
doms_files = Glob(doms_directory + "*.cpp")

env=Environment(
    CPPDEFINES=[],
    CCFLAGS=['-g'],
    LIBS=['zmq', 'pqxx' ,'pq','protobuf',opencv,'raspicam','raspicam_cv','djiosdk-core','pthread','curses'],
	LIBPATH=['/opt/vc/lib/','/usr/local/lib/',messaging_lib,osdk_lib],
    CPPPATH=['third_party/cpp-base64','/usr/local/include','/usr/local/include/djiosdk',messaging_lib,doms_directory,osdk_helpers_path],
    SCONS_CXX_STANDARD='c++14')

env.Program('drone', ['drone_main.cpp',drone_files, doms_files ])
